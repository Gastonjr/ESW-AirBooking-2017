@{
    ViewData["Title"] = "Home Page";
}
<div class="painelCentral">
    <div style="float:left">
        <button id="mainbtn" onclick="location.href='@Url.Action("Index", "Reservas")'" style="margin-left: 185px"> Pesquisar voos </button>
        <p />
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img id="carouselImg" src="~/images/porto.jpg" alt="Porto" class="img-responsive" style="width: 110%; height: 110%;" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Conheça a cidade do Douro e os seus famosos vinhos.
                        <p>

                            <a class="btn btn-default" href="#">
                                Saiba mais
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img id="carouselImg" src="~/images/Veix-Goodbye-New-York-Color-1200.jpg" alt="New York" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Passe um tempo na cidade que nunca dorme
                        <p>

                            <a class="btn btn-default" href="#">
                                Saiba mais
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div id="areaDeCaixaReserva" style="float:right">
    <!--caixa transparente com conteúdo não transparente-->
    <div id="caixaReserva">
        <h4 style="text-align:center;">Escolha já o seu voo</h4>

        <div class="conteudoCaixaTransparente">
            <form>
                <input type="radio" name="viagem" value="ida" checked style="text-align:center"> Ida &emsp;
                <input type="radio" name="viagem" value="volta" checked style="text-align:center"> Ida e Volta
                <p />

                Origem <select name="locations">
                    <option value="paris">Paris</option>
                    <option value="lisboa">Lisboa</option>
                    <option value="porto">Porto</option>
                    <option value="londres">Londres</option>
                    <option value="ny">Nova Iorque</option>
                </select>
                <p />
                Destino<select name="locations">
                    <option value="paris">Paris</option>
                    <option value="lisboa">Lisboa</option>
                    <option value="porto">Porto</option>
                    <option value="londres">Londres</option>
                    <option value="ny">Nova Iorque</option>
                </select>
                <p />
                Nº de pessoas<select name="numPessoas">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
                <p />
                Data de Ida <input id="dataIda" type="date" lang="pt-pt" /> <input id="formatedDate" type="hidden" />
                <p />
                Data de Volta <input id="dataVolta" type="date" /> <input id="formatedDate" type="hidden" />
                <p />
                <button id="mainbtn" style="width:100px;     margin-left:15%;"> Procurar </button>
            </form>
        </div>
    </div>
</div>


